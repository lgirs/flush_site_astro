---
import '../styles/global.css';

const { title = "X/V Zine", description = "From the Flush archives." } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title} | Flush</title>
    <meta name="description" content={description} />
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Special+Elite&display=swap" rel="stylesheet">

    <slot name="head" />
  </head>
  <body>
    <header class="zine-header">
        <a href="/" class="zine-logo-link">
            <img src="/images/logo-flush-white.png" alt="Back to Flush main site" class="logo" width="125" height="40" />
        </a>
        <div class="zine-title">
            <h1>X/V Zine<br>by Flush</h1>
        </div>
        <nav class="zine-nav">
            <a href="/venue-tracker/">Venue Tracker</a>
            <a href="/extras/intertainment/">Intertainment</a>
        </nav>
    </header>

    <main class="zine-page">
      <slot />
    </main>

    <footer class="site-footer">
        </footer>

    <script>
      // SCRIPT FOR RANDOM YELLOW CHARACTERS
      function addRandomYellowChars() {
        const paragraphs = document.querySelectorAll('.zine-page p');
        paragraphs.forEach(p => {
          let newHTML = '';
          for (const char of p.innerText) {
            // Roughly 1 in 20 characters will be yellow
            if (Math.random() < 0.05 && char !== ' ') {
              newHTML += `<span class="yellow-char">${char}</span>`;
            } else {
              newHTML += char;
            }
          }
          p.innerHTML = newHTML;
        });
      }
      // Run the script after the page loads
      document.addEventListener('DOMContentLoaded', addRandomYellowChars);
    </script>
  </body>
</html>

<style is:global>
  /* Zine-specific styles */
  .zine-page {
    font-family: 'Special Elite', monospace;
    background-color: var(--flush-black);
    color: var(--flush-light);
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem;
    line-height: 1.8;
  }

  .zine-page p {
    font-size: 1.1rem;
  }

  .zine-page h1, .zine-page h2, .zine-page h3 {
    font-family: 'Oswald', sans-serif;
    color: var(--flush-yellow);
    text-transform: uppercase;
  }

  .zine-page a {
    color: var(--flush-red);
    text-decoration: underline;
    font-weight: bold;
    transition: background-color 0.2s, color 0.2s;
  }

  .zine-page a:hover {
    background-color: var(--flush-red);
    color: var(--flush-black);
  }

  .yellow-char {
    color: var(--flush-yellow);
  }

  /* New Zine Header Styles */
  .zine-header {
    display: grid;
    grid-template-columns: 1fr 2fr 1fr;
    align-items: center;
    text-align: center;
    padding: 1rem;
    border-bottom: 2px dashed var(--flush-yellow);
  }

  .zine-logo-link {
    justify-self: start;
  }

  .zine-title h1 {
    font-size: 1.5rem;
    color: var(--flush-light);
    line-height: 1.2;
    margin: 0;
  }

  .zine-nav {
    justify-self: end;
    display: flex;
    gap: 1rem;
  }

  .zine-nav a {
    font-family: 'Oswald', sans-serif;
    text-decoration: none;
    color: var(--flush-light);
    font-weight: 600;
  }

  .zine-nav a:hover {
    color: var(--flush-yellow);
    background-color: transparent;
  }
</style>
