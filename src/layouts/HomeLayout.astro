---
const {
  title = "Flush",
  description = "Let’s do some entertainment",
} = Astro.props;

// Global styles (Oswald default, Archivo via .long-text if needed)
import "../styles/global.css";
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title} | Flush</title>
    <meta name="description" content={description} />
  </head>
  <body>
    <header class="header">
      <div class="header-inner">
        <a href="/"><img src="/images/logo-flush-white.png" alt="Flush" class="logo" /></a>
        <nav>
          <a href="/">Home</a>
          <a href="/about">About</a>
          <a href="/blog">Blog</a>
          <a href="/arcade">Arcade</a>
          <a href="/gigs">Gigs</a>
          <a href="/tags">Tags</a>
        </nav>
      </div>
    </header>

    <!-- HERO -->
    <section class="hero" aria-labelledby="hero-title">
      <div class="hero__overlay"></div>
      <div class="hero__inner">
        <h1 id="hero-title" class="hero__title">{title}</h1>
        <p class="hero__sub">{description}</p>
      </div>
    </section>

    <main class="page">
      <slot />
    </main>

    <footer class="footer page">
      <div>© Flush. All rights reserved.</div>
    </footer>
  </body>
</html>

<style>
/* Full-bleed hero with centered content over your image */
.hero{
  position: relative;
  min-height: 55vh;
  width: 100%;
  display: grid;
  place-items: center;
  text-align: center;
  /* Use the provided image from /public/images */
  background-image: url("/images/logo-flush-white-orange_vex.png");
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

/* Subtle overlay for contrast against the image */
.hero__overlay{
  position: absolute; inset: 0;
  background: linear-gradient(
    180deg,
    rgba(0,0,0,0.45) 0%,
    rgba(0,0,0,0.55) 40%,
    rgba(0,0,0,0.65) 100%
  );
}

.hero__inner{
  position: relative;
  padding: 2rem 1rem;
  max-width: 900px;
}

.hero__title{
  font-weight: 700;
  font-size: clamp(2.5rem, 8vw, 4.25rem);
  color: var(--flush-light);
  letter-spacing: 0.5px;
  margin: 0 0 0.5rem 0;
  text-transform: uppercase;
}

.hero__sub{
  font-size: clamp(1.05rem, 2.5vw, 1.35rem);
  color: var(--flush-yellow);
  margin: 0;
}

