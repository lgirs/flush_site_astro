---
const { title = "Flush", description = "Letâ€™s do some entertainment" } = Astro.props;
import "../styles/global.css";

/* If the page provides a hero vector, disable the old background image */
const hasVector = Astro.slots.has("hero-vector");
const heroClass = hasVector ? "hero hero--vector" : "hero";

const pageTitle = `${title} | Flush`;
const shareImage = new URL("/images/logo-flush-white-orange_vex.png", Astro.site).href;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{pageTitle}</title>
    <meta name="description" content={description} />

    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={shareImage} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.href} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={shareImage} />
    
  </head>
  <body class="bg-[var(--flush-black)]">
    <header class="header">
      <div class="header-inner">
        <a href="/"><img src="/images/logo-flush-white.png" alt="Flush" class="logo" width="125" height="40" /></a>
        <nav>
          <a href="/">Home</a>
          <a href="/gigs">Gigs</a>
          <a href="/music">Music</a>
          <a href="/content/lyrics/">Lyrics</a>
          <a href="/videos">Videos</a>
          <a href="/about">About</a>
        </nav>
      </div>
    </header>

    <section class={heroClass}>
      <div class="hero__overlay" aria-hidden="true"></div>

      <div class="hero__vector" aria-hidden="true">
        <slot name="hero-vector" />
      </div>
      </section>

    <main class="page">
      <slot />
    </main>

    <footer class="site-footer">
      <ul>
        <li><a class="link-plain" href="mailto:flushrock@gmail.com">Email</a></li>
        <li><a class="link-plain" href="https://www.instagram.com/flush_music/" target="_blank" rel="noopener">Instagram</a></li>
        <li><a class="link-plain" href="https://www.facebook.com/flushmusic" target="_blank" rel="noopener">Facebook</a></li>
        <li><a class="link-plain" href="https://open.spotify.com/artist/0M9RMWUBIGsJ9D123qGuW9" target="_blank" rel="noopener">Spotify</a></li>
      </ul>
    </footer>
  </body>
</html>

<style>
/* Default hero background (used when no vector is supplied) */
.hero{
  position: relative;
  min-height: 55vh;
  width: 100%;
  display: grid;
  place-items: center;
  text-align: center;
  background-image: url("/images/logo-flush-white-orange_vex.png");
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}
/* Vector mode = plain site black */
.hero--vector{
  background-image: none;
  background-color: var(--flush-black);
}

/* Z order: bg -> overlay(z1) -> vector(z2) */
.hero__overlay{
  position: absolute;
  inset: 0;
  z-index: 1;
  /* softer than before; keeps page cohesion without dimming the vector */
  background: linear-gradient(180deg, rgba(0,0,0,0.06) 0%, rgba(0,0,0,0.10) 40%, rgba(0,0,0,0.14) 100%);
}
.hero__vector{
  position: absolute;
  inset: 0;
  z-index: 2; /* above overlay so mark is fully visible */
  display: grid;
  place-items: center;
  pointer-events: none;
}

/* FIX: Remove top padding on the main content area for a seamless background */
main.page {
  padding-top: 0;
}
</style>
