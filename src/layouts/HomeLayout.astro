---
const { title = "Flush", description = "Let’s do some entertainment" } = Astro.props;
import "../styles/global.css";

// If the page supplies a hero vector, disable the default hero background.
const hasVector = Astro.slots.has("hero-vector");
const heroClass = hasVector ? "hero hero--vector" : "hero";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title} | Flush</title>
    <meta name="description" content={description} />
  </head>
  <body>
    <header class="header">
      <div class="header-inner">
        <a href="/"><img src="/images/logo-flush-white.png" alt="Flush" class="logo" /></a>
        <nav>
          <a href="/">Home</a>
          <a href="/gigs">Gigs</a>
          <a href="/music">Music</a>
          <a href="/content/lyrics/">Lyrics</a>
          <a href="/videos">Videos</a>
          <a href="/about">About</a>
        </nav>
      </div>
    </header>

    <!-- HERO -->
    <section class={heroClass}>
      <!-- Vector layer (above bg, below text) -->
      <div class="hero__vector" aria-hidden="true">
        <slot name="hero-vector" />
      </div>

      <!-- Gradient shade -->
      <div class="hero__overlay" aria-hidden="true"></div>

      <!-- Title & Tagline -->
      <div class="hero__inner">
        <h1 class="hero__title">FLUSH</h1>
        <p class="hero__sub">Let’s do some entertainment</p>
      </div>
    </section>

    <main class="page">
      <slot />
    </main>

    <footer class="site-footer">
      <ul>
        <li><a class="link-plain" href="mailto:flushrock@gmail.com">Email</a></li>
        <li><a class="link-plain" href="https://www.instagram.com/flush_music/" target="_blank" rel="noopener">Instagram</a></li>
        <li><a class="link-plain" href="https://www.facebook.com/flushmusic" target="_blank" rel="noopener">Facebook</a></li>
        <li><a class="link-plain" href="https://open.spotify.com/artist/0M9RMWUBIGsJ9D123qGuW9" target="_blank" rel="noopener">Spotify</a></li>
      </ul>
    </footer>
  </body>
</html>

<style>
/* Default hero shows the old background only when no vector is supplied */
.hero{
  position: relative;
  min-height: 55vh;
  width: 100%;
  display: grid;
  place-items: center;
  text-align: center;
  background-image: url("/images/logo-flush-white-orange_vex.png");
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

/* When a vector is provided, use plain site black as bg */
.hero--vector{
  background-image: none;
  background-color: #0f0d0d;
}

/* Vector layer */
.hero__vector{
  position: absolute;
  inset: 0;
  z-index: 2;         /* above overlay to make it unmistakable */
  display: grid;
  place-items: center;
  pointer-events: none;
}

/* Gradient shade (subtle, sits below vector now) */
.hero__overlay{
  position: absolute;
  inset: 0;
  z-index: 1;         /* below vector so it can't hide it */
  background: linear-gradient(180deg, rgba(0,0,0,0.20) 0%, rgba(0,0,0,0.30) 40%, rgba(0,0,0,0.40) 100%);
}

/* Text always on top */
.hero__inner{ position: relative; padding: 2rem 1rem; max-width: 900px; z-index: 3; }
.hero__title { font-family: "Oswald", sans-serif; font-size: clamp(2.5rem, 8vw, 4.25rem); font-weight: 700; color: var(--flush-light); text-transform: uppercase; margin: 0 0 .5rem 0; }
.hero__sub   { font-family: "Oswald", sans-serif; font-weight: 400; font-size: clamp(1.05rem, 2.5vw, 1.35rem); color: var(--flush-yellow); margin: 0; }
</style>
