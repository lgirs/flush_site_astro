---
const { title = "Flush", description = "Official Flush site" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <!-- Oswald + Montserrat are already used project-wide -->
    <link
      href="https://fonts.googleapis.com/css2?family=Oswald:wght@300;400;600;700&family=Montserrat:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>

  <body>
    <!-- Header (text links; white->yellow hover) -->
    <header class="site-header">
      <div class="container">
        <a href="/" class="brand">
          <img
            src="/images/logo-flush-white.png"
            alt="Flush"
            width="84"
            height="28"
            class="brand__img"
          />
        </a>
        <nav class="nav">
          <a href="/">Home</a>
          <a href="/gigs/">Gigs</a>
          <a href="/music/">Music</a>
          <a href="/lyrics/">Lyrics</a>
          <a href="/videos/">Videos</a>
          <a href="/about/">About</a>
        </nav>
      </div>
    </header>

    <!-- Page content -->
    <main id="main">
      <slot />
    </main>

    <!-- Footer (plain text socials; white->yellow hover) -->
    <footer class="site-footer">
      <div class="container footer__grid">
        <small class="copy">Â© {new Date().getFullYear()} FLUSH</small>
        <div class="socials">
          <a href="mailto:hello@flush.rocks">Email</a>
          <a href="https://www.instagram.com/flushrocks/" rel="noopener">Instagram</a>
          <a href="https://www.facebook.com/flushrock" rel="noopener">Facebook</a>
          <a href="https://open.spotify.com/artist/5nC7xgEo5W2Qe2ZcId6coF" rel="noopener">Spotify</a>
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  :root{
    --flush-red:#962800; --flush-black:#0f0d0d; --flush-light:#e9e8f1; --flush-yellow:#f5d547;
  }
  body{ margin:0; background:var(--flush-black); color:var(--flush-light); font-family:"Oswald", system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif; }
  .container{ max-width:1100px; margin-inline:auto; padding-inline:1rem; }

  .site-header{
    background:#000; position:sticky; top:0; z-index:50;
    border-bottom:1px solid rgba(255,255,255,.06);
  }
  .site-header .container{
    display:flex; align-items:center; justify-content:space-between; gap:.75rem;
    min-height:48px;
  }
  .brand{ display:inline-flex; align-items:center; text-decoration:none; }
  .brand__img{ display:block; height:28px; width:auto; }

  .nav{ display:flex; gap:1rem; flex-wrap:wrap; }
  .nav a{
    color:#fff; text-decoration:none; letter-spacing:.02em;
  }
  .nav a:hover{ color:var(--flush-yellow); }

  main{ min-height:40vh; }

  .site-footer{
    margin-top:2rem; padding:1.25rem 0; border-top:1px solid rgba(255,255,255,.08);
  }
  .footer__grid{ display:flex; align-items:center; justify-content:space-between; gap:.75rem; }
  .copy{ opacity:.85; }
  .socials{ display:flex; gap:.85rem; flex-wrap:wrap; }
  .socials a{ color:#fff; text-decoration:none; }
  .socials a:hover{ color:var(--flush-yellow); }
</style>
