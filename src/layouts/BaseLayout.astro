import TagList from "../components/TagList.astro";
import "../styles/global.css";
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title} | Flush</title>
    <meta name="description" content={description} />
  </head>
  <body>
    <header class="header">
      <div class="header-inner">
        <a href="/"><img src="/images/logo-flush-white.png" alt="Flush" class="logo" /></a>
        <nav>
          <a href="/">Home</a>
          <a href="/gigs">Gigs</a>
          <a href="/music">Music</a>
          <a href="/content/lyrics/">Lyrics</a>
          <a href="/video">Videos</a>
          <a href="/about">About</a>
        </nav>
      </div>
    </header>

    <main class="page">
      <slot />
      {tags.length ? <TagList tags={tags} /> : null}
    </main>

    <footer class="site-footer">
      <p><strong>Contact & Socials:</strong></p>
      <ul>
        <li>Email: <a href="mailto:flushrock@gmail.com">flushrock@gmail.com</a></li>
        <li>Instagram: <a href="https://www.instagram.com/flush_music/" target="_blank">flush_music</a></li>
        <li>Facebook: <a href="https://www.facebook.com/flushmusic" target="_blank">flushmusic</a></li>
        <li>Spotify: <a href="https://open.spotify.com/artist/0M9RMWUBIGsJ9D123qGuW9" target="_blank">Flush on Spotify</a></li>
      </ul>
    </footer>
  </body>
</html>
