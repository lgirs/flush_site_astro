---
const { title = "Flush", description = "Let’s do some entertainment", tags = [] } = Astro.props;
import TagList from "../components/TagList.astro";
import "../styles/global.css";
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title} | Flush</title>
    <meta name="description" content={description} />
  </head>
  <body>
    <header class="header">
      <div class="header-inner">
        <a href="/"><img src="/images/logo-flush-white.png" alt="Flush" class="logo" /></a>
        <nav>
          <a href="/">Home</a>
          <a href="/gigs">Gigs</a>
          <a href="/music">Music</a>
          <a href="/content/lyrics/">Lyrics</a>
          <a href="/video">Video</a>
          <a href="/about">About</a>
        </nav>
      </div>
    </header>

    <main class="page">
      <slot />
      {tags.length ? <TagList tags={tags} /> : null}
    </main>

    <footer class="footer page">
      <div>© Flush. All rights reserved.</div>
    </footer>
  </body>
</html>
