---
import BaseLayout from "../../layouts/BaseLayout.astro";
import intertainmentData from "../../data/intertainment-data.json";

export const pageTitle = "Intertainment";
export const pageTags = ["Extras", "Links"];
---

<BaseLayout title={pageTitle} description="A collection of fun and interesting websites.">
  <h1>{pageTitle}</h1>
  <p class="long-text">
    A curated collection of fun, weird, and wonderful things from around the internet that we think you'll enjoy.
  </p>

  <div class="card-grid">
    {intertainmentData.map(item => (
      <div class="card">
        {item.preview.image && (
          <a href={item.url} target="_blank" rel="noopener" class="card-image-link">
            <img src={item.preview.image} alt={`Preview of ${item.preview.title}`} loading="lazy" />
          </a>
        )}
        <div class="card-content">
          <h2 class="headline">{item.headline}</h2>
          <p class="annotation">{item.annotation}</p>
          <div class="preview-box">
            <a href={item.url} target="_blank" rel="noopener">
              <p class="preview-title">{item.preview.title}</p>
              <p class="preview-description">{item.preview.description}</p>
              <span class="preview-url">{item.url}</span>
            </a>
          </div>
        </div>
      </div>
    ))}
  </div>
</BaseLayout>

<style>
  .card-grid {
    display: grid;
    gap: 2rem;
    margin-top: 2rem;
  }
  .card {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(233, 232, 241, 0.1);
    border-radius: 8px;
    overflow: hidden;
  }
  .card-image-link img {
    width: 100%;
    height: 180px;
    object-fit: cover;
    border-bottom: 1px solid rgba(233, 232, 241, 0.1);
  }
  .card-content {
    padding: 1.5rem;
  }
  .headline {
    margin-top: 0;
    font-size: 1.5rem;
  }
  .annotation {
    font-family: "Montserrat", sans-serif;
    opacity: 0.9;
    margin-bottom: 1.5rem;
  }
  .preview-box {
    border: 1px solid rgba(233, 232, 241, 0.1);
    border-radius: 4px;
    padding: 1rem;
    background: var(--flush-black);
    transition: background-color 0.2s ease;
  }
  .preview-box:hover {
    background-color: rgba(255, 255, 255, 0.05);
  }
  .preview-box a {
    text-decoration: none;
    color: var(--flush-light);
  }
  .preview-title {
    font-weight: 600;
    margin: 0;
  }
  .preview-description {
    font-size: 0.9rem;
    opacity: 0.7;
    margin: 0.25rem 0;
    font-family: "Montserrat", sans-serif;
  }
  .preview-url {
    font-size: 0.8rem;
    opacity: 0.5;
    word-break: break-all;
  }
</style>
