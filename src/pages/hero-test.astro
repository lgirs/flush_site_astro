import BaseLayout from "../layouts/BaseLayout.astro";
import HeroLogo from "../components/HeroLogo.astro";
---

<BaseLayout title="Hero Test" description="Testing stacked logo + brush text">
  <HeroLogo
    logo="/images/logo-flush-white.png"
    splash="/images/wereallbrushtext.png"
    title="Flush"
    maxWidth="1100px"
    padX="1rem"
    logoOffsetX="0px"
  />

  <section class="page long-text">
