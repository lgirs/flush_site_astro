---
export const pageTitle = "Gigs";
export const pageTags = ["Gigs"];

---
import BaseLayout from "../../layouts/BaseLayout.astro";
import gigs from "../../data/gigs.json";

type Gig = {
  date: string;
  event: string;
  venue: string;
  city: string;
  country?: string;
  link?: string;
  notes?: string;
};

const toDate = (s: string) => new Date(`${s}T00:00:00Z`);

const today = new Date();
const todayUTC = new Date(Date.UTC(today.getUTCFullYear(), today.getUTCMonth(), today.getUTCDate()));

const upcoming: Gig[] = [];
const past: Gig[] = [];

(gigs as Gig[]).forEach((g) => (toDate(g.date) >= todayUTC ? upcoming : past).push(g));

upcoming.sort((a, b) => toDate(a.date).getTime() - toDate(b.date).getTime());
past.sort((a, b) => toDate(b.date).getTime() - toDate(a.date).getTime());

const fmt = (s: string) => {
  const d = toDate(s);
  const y = d.getUTCFullYear();
  const m = String(d.getUTCMonth() + 1).padStart(2, "0");
  const da = String(d.getUTCDate()).padStart(2, "0");
  return `${y}-${m}-${da}`;
};

const place = (g: Gig) => `${g.city}${g.country ? `, ${g.country}` : ""}`;
---
<BaseLayout   
title="Gigs" 
  description="Upcoming and past gigs by Flush"
  tags={["Gigs"]}
  <section class="gigs">
    <h1>Gigs</h1>

    <div class="block">
      <h2>Upcoming</h2>
      {upcoming.length === 0 ? (
        <p class="muted">No upcoming gigs yet. Check back soon.</p>
      ) : (
        <ul class="list">
          {upcoming.map((g) => (
            <li class="item">
              <span class="date">{fmt(g.date)}</span>
              <span class="details">
                <span class="event">{g.event}</span>
                <span class="at"> @ </span>
                <span class="venue">{g.venue}</span>
                {g.notes && <span class="notes"> — <em>{g.notes}</em></span>}
              </span>
              <span class="loc">{place(g)}</span>
              {g.link ? (
                <a class="link" href={g.link} target="_blank" rel="noopener">Details</a>
              ) : (
                <span class="link empty" aria-hidden="true"></span>
              )}
            </li>
          ))}
        </ul>
      )}
    </div>

    <div class="block">
      <h2>Past</h2>
      {past.length === 0 ? (
        <p class="muted">No past gigs yet.</p>
      ) : (
        <ul class="list">
          {past.map((g) => (
            <li class="item">
              <span class="date">{fmt(g.date)}</span>
              <span class="details">
                <span class="event">{g.event}</span>
                <span class="at"> @ </span>
                <span class="venue">{g.venue}</span>
                {g.notes && <span class="notes"> — <em>{g.notes}</em></span>}
              </span>
              <span class="loc">{place(g)}</span>
              {g.link ? (
                <a class="link" href={g.link} target="_blank" rel="noopener">Details</a>
              ) : (
                <span class="link empty" aria-hidden="true"></span>
              )}
            </li>
          ))}
        </ul>
      )}
    </div>
  </section>
</BaseLayout>

<style>
  .gigs { display: grid; gap: 1.5rem; }
  h1 { margin-top: .25rem; }
  h2 { margin-top: .5rem; }
  .block { display: grid; gap: .75rem; }

    .list { 
    list-style: none; 
    padding: 0; 
    margin: 0; 
    display: grid; 
    gap: 0; /* separators will create the spacing */
  }

  .item {
    display: grid;
    align-items: baseline;
    gap: .35rem 1rem;
    grid-template-columns: 9ch 1fr auto auto;
    padding: .5rem 0;
    border-bottom: 1px solid rgba(233,232,241,0.2); /* thin gray divider */
  }

  .item:last-child { border-bottom: none; }

  .date { opacity: .9; font-variant-numeric: tabular-nums; }
  .details {
    min-width: 0;               /* allows ellipsis */
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  .event { font-weight: 700; letter-spacing: .3px; text-transform: uppercase; }
  .venue { }
  .notes { opacity: .85; }
  .loc { opacity: .85; white-space: nowrap; }
  .link { white-space: nowrap; }
  .link.empty { width: 0.01px; overflow: hidden; } /* keeps column alignment even without a link */
  .muted { opacity: .8; }

  /* Small screens: stack into two neat lines */
  @media (max-width: 640px){
    .item { grid-template-columns: 9ch 1fr; }
    .loc, .link { grid-column: 1 / -1; }
    .loc { opacity: .85; }
    .details { white-space: normal; } /* allow wrap on phones */
  }
</style>
