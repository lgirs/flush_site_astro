---
/* Hidden style guide page (not linked in nav) */
export const pageTitle = "Style Guide";
export const pageTags = []; // keep out of tag cloud

import BaseLayout from "../../layouts/BaseLayout.astro";
---

<!-- Keep crawlers away -->
<meta name="robots" content="noindex,nofollow" />

<BaseLayout title="Style Guide" description="Visual reference for Flush site styles">
  <section class="sg">
    <h1>Style Guide</h1>
    <p class="muted">This page is for internal use when creating content. It shows fonts, colors, links and common blocks.</p>

    <!-- Colors -->
    <h2>Colors</h2>
    <div class="swatches">
      <div class="swatch" style="--c: var(--flush-black, #0f0d0d)"><span>#0F0D0D</span><small>Black (bg)</small></div>
      <div class="swatch" style="--c: var(--flush-light, #e9e8f1)"><span>#E9E8F1</span><small>Light (text)</small></div>
      <div class="swatch" style="--c: var(--flush-yellow, #f5d547)"><span>#F5D547</span><small>Yellow (highlight)</small></div>
      <div class="swatch" style="--c: var(--flush-red, #962800)"><span>#962800</span><small>Legacy red</small></div>
      <div class="swatch" style="--c: var(--flush-white, #ffffff)"><span>#FFFFFF</span><small>Pure white</small></div>
    </div>

    <!-- Headings / type -->
    <h2>Typography — Oswald (global)</h2>
    <div class="type-grid">
      <div>
        <h1>H1 — Welcome Friend</h1>
        <h2>H2 — Section Heading</h2>
        <h3>H3 — Subsection Heading</h3>
        <p>Body (Oswald, default). We believe that music is a community thing and we are better off together.</p>
        <p><strong>Bold</strong> &middot; <em>Italic</em> &middot; <code>Code</code></p>
      </div>
      <div>
        <p class="oswald w300">Oswald 300 — The quick brown fox jumps over the lazy dog.</p>
        <p class="oswald w400">Oswald 400 — The quick brown fox jumps over the lazy dog.</p>
        <p class="oswald w500">Oswald 500 — The quick brown fox jumps over the lazy dog.</p>
        <p class="oswald w600">Oswald 600 — The quick brown fox jumps over the lazy dog.</p>
        <p class="oswald w700">Oswald 700 — The quick brown fox jumps over the lazy dog.</p>
      </div>
    </div>

    <h2>Long body text — Archivo (use with <code>.long-text</code>)</h2>
    <div class="long-text card">
      <p>This block preview uses Archivo for longer reading. Apply by wrapping content in a container with class <code>.long-text</code> in your MDX or Astro.</p>
      <ul>
        <li>Readable paragraphs</li>
        <li>Lists and links <a href="#">like this</a></li>
      </ul>
    </div>

    <!-- Links / buttons -->
    <h2>Links & states</h2>
    <p>Normal link: <a href="#">Flush highlight link</a>. Hover shows yellow highlight (no underline).</p>

    <!-- Tag chips (cloud look) -->
    <h2>Tag chips (home cloud style)</h2>
    <div class="cloud">
      <a href="#" class="cloud-tag" style="--scale:1.2;--rot:-3deg;--w:700;">gigs</a>
      <a href="#" class="cloud-tag" style="--scale:1.0;--rot:2deg;--w:600;">lyrics</a>
      <a href="#" class="cloud-tag" style="--scale:1.4;--rot:-6deg;--w:700;">video</a>
      <a href="#" class="cloud-tag" style="--scale:0.95;--rot:4deg;--w:600;">music</a>
    </div>

    <!-- Hero sample -->
    <h2>Hero snippet</h2>
    <div class="hero-sample card">
      <div class="hero-title">WELCOME FRIEND</div>
      <div class="hero-sub">We are Flush. Pleasure to meet you.</div>
    </div>
  </section>
</BaseLayout>

<style>
  .sg { display:grid; gap:1.25rem; }
  .muted { opacity:.8; }

  /* Swatches */
  .swatches { display:grid; grid-template-columns: repeat(auto-fit, minmax(180px,1fr)); gap:.75rem; }
  .swatch {
    background: var(--c);
    color: #000;
    border: 1px solid rgba(255,255,255,.08);
    padding: .75rem;
    border-radius: .5rem;
    display:flex; flex-direction:column; gap:.25rem;
  }
  .swatch span { font-weight:700; color:#000; mix-blend-mode:screen; }
  .swatch small { opacity:.9; color:#000; mix-blend-mode:screen; }

  /* Type samples */
  .type-grid { display:grid; gap:1rem; grid-template-columns: 1fr; }
  @media (min-width: 800px){ .type-grid { grid-template-columns: 1fr 1fr; } }
  .oswald { font-family:"Oswald", Impact, Haettenschweiler, "Arial Narrow Bold", sans-serif; }
  .w300{font-weight:300;} .w400{font-weight:400;} .w500{font-weight:500;}
  .w600{font-weight:600;} .w700{font-weight:700;}

  /* Cards */
  .card { border:1px solid rgba(233,232,241,.15); border-radius:.5rem; padding:1rem; }

  /* Cloud tag preview (same look as home TagCloud) */
  .cloud { display:flex; flex-wrap:wrap; gap:.4rem .7rem; align-items:center; }
  .cloud-tag {
    display:inline-block;
    transform: rotate(var(--rot)) scale(var(--scale));
    transform-origin:center;
    font-family:"Oswald", Impact, Haettenschweiler, "Arial Narrow Bold", sans-serif;
    font-weight:var(--w,600);
    line-height:1;
    color:var(--flush-light, #e9e8f1);
    letter-spacing:.5px;
    text-transform:uppercase;
    text-decoration:none;
    transition: transform .12s ease, color .12s ease, text-shadow .12s ease;
  }
  .cloud-tag:hover {
    color:var(--flush-yellow, #f5d547);
    transform: rotate(var(--rot)) scale(calc(var(--scale) * 1.06));
    text-shadow:0 2px 0 rgba(0,0,0,.35);
  }

  /* Hero sample (quick visual) */
  .hero-sample { background:#1a1616; }
  .hero-title {
    font-family:"Oswald", sans-serif;
    font-weight:700;
    font-size: clamp(28px, 6vw, 56px);
    letter-spacing:.5px;
  }
  .hero-sub {
    font-family:"Oswald", sans-serif;
    font-weight:400;
    color: var(--flush-yellow, #f5d547);
    margin-top:.25rem;
  }
</style>
